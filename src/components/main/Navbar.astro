<script lang="js">  

  let menuOpen = false

  function openListMenu(){
    const menu = document.getElementById('dropdown-user')
    menuOpen = !menuOpen
    if(!menuOpen){
      menu.classList.add('absolute')
      menu.classList.add('top-10')
      menu.classList.add('right-7')
      menu.classList.remove('hidden')
    }else{
      menu.classList.remove('absolute')
      menu.classList.remove('top-10')
      menu.classList.remove('right-7')
      menu.classList.add('hidden')
    }
  }
  
  class LiraDark extends HTMLElement {
    constructor() {
      super();
      const toggle = this.querySelector('input');
  
      // Each time the button is clicked, update the count.
      toggle.addEventListener('click', () => {
        const htmlElement = document.documentElement;
        htmlElement.classList.toggle('dark');
      });
    }
  }
  customElements.define('lira-dark', LiraDark);
  </script>